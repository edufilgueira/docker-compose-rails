<%= form_for(@solicitacao_transporte, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @solicitacao_transporte %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :tipo_solicitacao_transporte %>
      <%= f.collection_select :tipo_solicitacao_transporte_id, TipoSolicitacaoTransporte.all , :id, :tipo, {prompt: "selecione"} ,{class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :area_solicitante %>
      <%= f.collection_select :area_id, Area.all , :id, :nome, {prompt: "selecione"} ,{class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :solicitado_para %>
      <%= f.collection_select :destinado_para_id, Pessoa.all , :id, :nome, {prompt: "selecione"} ,{class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :data_transporte %>
      <%= f.text_field :data_transporte, class: 'form-control datepicker' %>
    </div>
     <div class="col-sm-5 col-offset-1">
      <%= f.label :data_retorno %>
      <%= f.text_field :data_retorno, class: 'form-control datepicker ' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :hora_solicitada %>
      <%= f.text_field :hora_solicitada, class: 'form-control clockpicker', 'data-autoclose': true  %>
    </div>
     <div class="col-sm-5 col-offset-1">
      <%= f.label :hora_prevista_retorno %>
      <%= f.text_field :hora_prevista_retorno,  class: 'form-control clockpicker', 'data-autoclose': true  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :origem %>
      <%= f.text_field :origem, class: 'form-control' %>
    </div>
     <div class="col-sm-5 col-offset-1">
      <%= f.label :destino %>
      <%= f.text_field :destino, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :justificativa %>
      <%= f.text_area :justificativa, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-10">
      <%= f.check_box :urgente, {}, true, false %>
      <%= f.label :urgente %>
    </div>
  </div>
  <div id="justificativa-urgencia">
    <div class="form-group">
      <div class="col-sm-10 col-offset-1">
        <%= f.label :justificativa_urgencia %>
        <%= f.text_area :justificativa_urgencia, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), solicitacao_transportes_path, class: 'btn' %>
    </div>
  </div>
<% end %>
