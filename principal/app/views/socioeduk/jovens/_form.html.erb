<%= form_for(@socioeduk_jovem, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'layouts/error_messages', model_name: @socioeduk_jovem %>
  <%= render 'layouts/message_required' %>


  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :nome, class: 'required' %>
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :apelido %>
      <%= f.text_field :apelido, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
      <%= f.check_box :falecido %>
      <%= f.label :falecido %>
    </div>
    <div class="col-sm-2">
      <%= f.check_box :orfao %>
      <%= f.label :orfao %>
    </div>
    <div class="col-sm-2">
      <%= f.check_box :dependente_quimico %>
      <%= f.label :dependente_quimico %>
    </div>
    <div class="col-sm-4">
      <%= f.label :data_nascimento %>
      <%= f.text_field :data_nascimento, class: 'form-control datepicker' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-6">
      <label>Sexo</label><br>
      <% @socioeduk_jovem.class.gender_attributes_for_select.each do |gender_i18n,gender| %>
          <%= f.label :sexo, class: 'radio-inline', for: "socioeduk_jovem_sexo_#{gender}" do %>
          <%= f.radio_button :sexo, gender %> <%= gender_i18n %>
          <% end -%>
      <% end  %>
    </div>
    <div class="col-sm-4">
      <%= f.label :opcao_sexual_id %>
      <%= f.collection_select :opcao_sexual_id, Socioeduk::OpcaoSexual.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :nome_mae %>
      <%= f.text_field :nome_mae, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :nome_pai %>
      <%= f.text_field :nome_pai, class: 'form-control' %>
    </div>
  </div>

  <h2>Documentos</h2><hr>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :rg %>
      <%= f.text_field :rg, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :orgao_expedidor %>
      <%= f.text_field :orgao_expedidor, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :cpf %>
      <%= f.text_field :cpf, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.check_box :providenciando_documentos %> <%= f.label :Providenciando? %>
    </div>
  </div>


  <h2>Dados Pessoais</h2><hr>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :peso %>
      <%= f.text_field :peso, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :altura %>
      <%= f.text_field :altura, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :etnia %>
      <%= f.text_field :etnia, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :estado_civil_id %>
      <%= f.select :estado_civil_id, options_for_select(@socioeduk_jovem.tipos_estado_civil), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :nacionalidade %>
      <%= f.text_field :nacionalidade, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :naturalidade %>
      <%= f.text_field :naturalidade, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :responsavel %>
      <%= f.text_field :responsavel, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :mora_com %>
      <%= f.text_field :mora_com, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :numero_filhos %>
      <%= f.number_field :numero_filhos, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :responsavel_filhos %>
      <%= f.text_field :responsavel_filhos, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :tempo_gestacao, 'Tempo gestação (meses)' %> <%= f.check_box :amamentando %> <%= f.label :amamentando? %>
      <%= f.text_field :tempo_gestacao, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :socioeduk_situacao_adolescente_id %>
      <%= f.collection_select :socioeduk_situacao_adolescente_id, Socioeduk::SituacaoAdolescente.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :uf_naturalidade_id %>
      <%= f.collection_select :uf_naturalidade_id, Estado.all, :id, :nome, {include_blank: '--selecione--'}, class: 'form-control', data: {remote: true, url: socioeduk_jovens_cidades_por_estado_path} %>
    </div>
    <div class="col-sm-5">
      <%= f.label :cidade_naturalidade_id %>
      <%= f.select :cidade_naturalidade_id, options_for_select([]), {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :idade_estimada %>
      <%= f.text_field :idade_estimada, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :outras_info_fisica %>
      <%= f.text_field :outras_info_fisica, class: 'form-control' %>
    </div>
  </div>

  <h2>Características</h2><hr>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :socioeduk_cor_olho_id %>
      <%= f.collection_select :socioeduk_cor_olhos_id, Socioeduk::CorOlho.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
    <div class="col-sm-5">
      <%= f.label :socioeduk_raca_cor_id %>
      <%= f.collection_select :socioeduk_raca_cor_id, Socioeduk::RacaCor.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :socioeduk_tipo_cabelo_id %>
      <%= f.collection_select :socioeduk_tipo_cabelo_id, Socioeduk::TipoCabelo.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :foto %>
      <%= f.file_field :foto, class: 'form-control' %>
    </div>
  </div>

  

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), socioeduk_jovens_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>