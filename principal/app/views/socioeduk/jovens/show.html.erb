<% content_for :title do %>
  <%= t('.title', default: @socioeduk_jovem.class.model_name.human ) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-right">
      <%= link_to('Listar', socioeduk_jovens_path, class: 'btn btn-default') %>
      <%= link_to 'Editar', edit_socioeduk_jovem_path(@socioeduk_jovem), class: 'btn btn-detran-primary' %>
    </div>
    <%= image_tag @socioeduk_jovem.foto.url, size: '100x100' %>
    <b style="font-size: 1.5em;"><%= @socioeduk_jovem.nome.upcase %></b>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('.title', default: @socioeduk_jovem.class.model_name.human ) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th><%= Socioeduk::Jovem.human_attribute_name :nome %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :apelido %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :falecido  %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :data_nascimento %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :sexo %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :opcao_sexual %></th>
                  <th>Nomes: Mãe / Pai</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.nome %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.apelido %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.falecido ? 'Sim' : 'Não' %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.data_nascimento %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.sexo %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.opcao_sexual %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= "#{@socioeduk_jovem.nome_mae} / #{@socioeduk_jovem.nome_pai}" %></td>
                </tr>
                <tr>
                  <th><%= Socioeduk::Jovem.human_attribute_name :peso %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :altura %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :dependente_quimico %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :nacionalidade %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :naturalidade %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :etnia %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :estado_civil_id %></th>
                </tr>
                <tr>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.peso %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.altura %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.dependente_quimico ? 'Sim' : 'Não' %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.nacionalidade %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.naturalidade %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.etnia %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.estado_civil_id %></td>
                </tr>
                <tr>
                  <th><%= Socioeduk::Jovem.human_attribute_name :orfao %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :responsavel %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :mora_com %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :numero_filhos %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :responsavel_filhos %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :tempo_gestacao %></th>
                  <th><%= Socioeduk::Jovem.human_attribute_name :amamentando %></th>
                </tr>

                <tr>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.orfao ? 'Sim' : 'Não' %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.responsavel %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.mora_com %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.numero_filhos %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.responsavel_filhos %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.tempo_gestacao %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @socioeduk_jovem.amamentando ? 'Sim' : 'Não' %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div clas="row">
          <div class="col-sm-12">
            <%= render partial: 'tabs' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


