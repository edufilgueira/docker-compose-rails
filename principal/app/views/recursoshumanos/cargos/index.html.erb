<%- model_class = Recursoshumanos::Cargo -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.recursoshumanos_cargo', default: Recursoshumanos::Cargo.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title excluir_da_impressao">
        <h5><%=  I18n.t('activerecord.models.recursoshumanos_cargo', default: Recursoshumanos::Cargo.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_recursoshumanos_cargo_path, class: 'btn btn-success btn-sm excluir_da_impressao' %>
            <a onClick="window.print()" class='btn btn-info btn-sm excluir_da_impressao'/>Imprimir</a>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:nome) %></th>
                                    <th><%= model_class.human_attribute_name(:quantidade) %></th>
                                    <th><%= I18n.t('helpers.label.campo_calculado.quantidade_cargo_contratado') %></th>
                                    <th><%= I18n.t('helpers.label.campo_calculado.quantidade_cargo_disponivel') %></th>
                                    <th><%= model_class.human_attribute_name(:recursoshumanos_contratos) %></th>
                                    <th width="18%" class="excluir_da_impressao"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @recursoshumanos_cargos.each do |recursoshumanos_cargo| %>
                <tr>
                                    <td><%= recursoshumanos_cargo.nome %></td>
                                    <td><%= recursoshumanos_cargo.quantidade %></td>
                                    <td><%= recursoshumanos_cargo.quantidade_cargo_contratado %></td>
                                    <td><%= recursoshumanos_cargo.quantidade_cargo_disponivel %></td>
                                    <td><%= recursoshumanos_cargo.contrato %></td>
                                    <td class="excluir_da_impressao">
                    <%= link_to_show(recursoshumanos_cargo) %>
                    <%= link_to_edit(edit_recursoshumanos_cargo_path(recursoshumanos_cargo)) %>
                    <%= link_to_delete(recursoshumanos_cargo) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
