<%= form_for(@funcao_pessoa, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @funcao_pessoa %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :funcao %>
      <%= f.collection_select :funcao_id, Funcao.all, :id, :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :pessoa %>
      <%= f.collection_select :pessoa_id, Pessoa.all, :id, :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), funcao_pessoas_path, class: 'btn' %>
    </div>
  </div>
<% end %>
